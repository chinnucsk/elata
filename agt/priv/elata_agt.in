ROOT=`pwd`
ERTS=`ls $ROOT | grep erts`
ERL=$ROOT/$ERTS/bin/erl
sed s:%FINAL_ROOTDIR%:$ROOT: $ROOT/$ERTS/bin/erl.src > $ROOT/$ERTS/bin/erl

$ERL -sname @PKG@ -detached \
   -boot   $ROOT/releases/@VSN@/start \
   -config $ROOT/lib/@PKG@-@VSN@/priv/sys
   